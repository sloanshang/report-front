<script>
  import jQuery from 'jquery'
  import vueLoading from 'vue-loading-template'
  export default {
    props: ['orgCode', 'farmOrg', 'device'],
    name: 'swine-Report-14',
    components: {
      vueLoading
    },
    data () {
      return {
        up: true,
        days: 7,
        datas: [],
        farmName: this.orgCode + '#' + this.farmOrg,
        loadFlag: false,
        tableFlag: false,
        serviceType: '',
        allData: {
          parCheck: true,
          value: 'ALL',
          text: '全选'
        },
        checkData: [{
          id: '1',
          name: '后备种猪',
          value: 'G',
          isCheck: false
        }, {
          id: '2',
          name: '断奶种猪',
          value: 'W',
          isCheck: false
        }, {
          id: '3',
          name: '流产',
          value: 'A',
          isCheck: false
        }]
      }
    },
    mounted () {
      this.allSelect()
    },
    methods: {
      down () {
        this.up = !this.up
      },
      allSelect () {
        var vm = this
        vm.checkData.forEach(item => {
          item.isCheck = vm.allData.parCheck
        })
        if (vm.allData.parCheck === true) {
          vm.serviceType = vm.allData.value
        } else {
          vm.checkData[0].isCheck = true
          vm.serviceType = vm.checkData[0].value
        }
      },
      singleSelect (item) {
        var vm = this
        vm.checkData.forEach(data => {
          data.isCheck = false
        })
        item.isCheck = true
        vm.serviceType = item.value
      },
      doSearch () {
        var _self = this
        _self.datas = ''
        _self.tableFlag = false
        _self.loadFlag = true
        jQuery.ajax({
          url: '/standard/' + _self.orgCode + '/' + _self.farmOrg + '/report14',
          type: 'POST',
          //  contentType: 'application/json',
          data: {'serviceType': _self.serviceType, 'days': _self.days},
          dataType: 'json',
          success: function (res) {
            console.log(res)
            _self.datas = res
            _self.loadFlag = false
            _self.farmName = res[0].farm_name_loc
            _self.tableFlag = true
          },
          fail: function (e) {
//            this.tableFlag = false
            alert('请求失败')
            console.log('查询失败')
          }
        })
      }
    }
  }
</script>

