</template>

<script>
  import jQuery from 'jquery'
  import Dtre001 from '@/components/cm/dtre001'
  import Dtre002 from '@/components/cm/dtre002'
  import {formatDate} from '@/components/utils/date'
  import vueLoading from 'vue-loading-template'
  export default {
    props: ['orgCode', 'farmOrg', 'device'],
    name: 'swine-Report11',
    components: {
      Dtre001,
      Dtre002,
      vueLoading
    },
    watch: {
      daterangeVal: function (e) {
        console.log(e)
      }
    },
    data () {
      return {
        pickerOptions2: {
          shortcuts: [{
            text: '最近一周',
            onClick (picker) {
              const end = new Date()
              const start = new Date()
              start.setTime(start.getTime() - 3600 * 1000 * 24 * 7)
              picker.$emit('pick', [start, end])
            }
          }, {
            text: '最近一个月',
            onClick (picker) {
              const end = new Date()
              const start = new Date()
              start.setTime(start.getTime() - 3600 * 1000 * 24 * 30)
              picker.$emit('pick', [start, end])
            }
          }, {
            text: '最近三个月',
            onClick (picker) {
              const end = new Date()
              const start = new Date()
              start.setTime(start.getTime() - 3600 * 1000 * 24 * 90)
              picker.$emit('pick', [start, end])
            }
          }]
        },
        farmName: this.orgCode + '#' + this.farmOrg,
        up: false,
        loadFlag: false,
        tableFlag: false,
        datas: [],
        startDate: new Date(new Date().setTime(new Date().getTime() - 3600 * 1000 * 24 * 7)),
        endDate: new Date(),
        daterangeVal: '',
        selectLoc: 'ALL',
        parLocation: [
          {
            value: 'ALL'
          },
          {
            value: 'LOC6'
          },
          {
            value: 'LOC1'
          }
        ],
        htmlTitle: this.$t('message.titleSwineReport11')
      }
    },
    filters: {
      formatDate (time) {
        let date = new Date(time)
        return formatDate(date, 'yyyy-MM-dd')
      }
    },
    mounted () {
      this.startDate = formatDate(this.startDate, 'yyyy-MM-dd')
      this.endDate = formatDate(this.endDate, 'yyyy-MM-dd')
    },
    methods: {
      doChangeStart (d) {
        console.log('changeStart to ' + d)
        this.startDate = d
        this.startDate = formatDate(this.startDate, 'yyyy-MM-dd')
      },
      doChangeEnd (d) {
        console.log('changeEnd to ' + d)
        this.endDate = d
        this.endDate = formatDate(this.endDate, 'yyyy-MM-dd')
      },
      down () {
        this.up = !this.up
      },
      doSearch () {
        var _self = this
        _self.loadFlag = true
        _self.datas = ''
        _self.tableFlag = false
        jQuery.ajax({
          url: '/standard/' + _self.orgCode + '/' + _self.farmOrg + '/report11',
          type: 'POST',
          //  contentType: 'application/json',
          data: {'startDate': _self.daterangeVal[0] || _self.startDate, 'endDate': _self.daterangeVal[1] || _self.endDate, 'parLocation': _self.selectLoc},
          dataType: 'json',
          success: function (res) {
            _self.datas = res
            _self.loadFlag = false
            _self.tableFlag = true
          },
          fail: function (e) {
//            this.tableFlag = false
            alert('请求失败')
            console.log('查询失败')
          }
        })
      }
    }
  }
</script>

