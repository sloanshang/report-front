    },
    methods: {
//    获取表格数据
      getData (batch) {
        var _self = this
        jQuery.ajax({
          url: '/grower/report/SWFN0104/query',
          type: 'POST',
          contentType: 'application/json',
          data: JSON.stringify({'orgCode': _self.orgCode, 'farmOrg': _self.farmOrg, 'flock': batch}),
          dataType: 'json',
          success: function (res) {
            _self.tableData01 = res.datas[1001]
          },
          fail: function (e) {
            console.log('查询失败')
          }
        })
      }

    }
  }
