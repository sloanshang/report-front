<script>
  import Dtre001 from '@/components/cm/dtre001'
  import Dtre002 from '@/components/cm/dtre002'
  import Variety001 from '@/components/cm/variety001'
  import jQuery from 'jquery'
  import vueLoading from 'vue-loading-template'
  export default {
    props: ['orgCode', 'farmOrg', 'device', 'language'],
    name: 'swine-report02',
    components: {
      Dtre001,
      Dtre002,
      Variety001,
      vueLoading
    },
    data () {
      return {
        fixedHeader: false,
        PAR_DATE: new Date().getFullYear() + '-' + (new Date().getMonth() + 1) + '-' + new Date().getDate(),
        PAR_ALL_BREED: 'ALL',
        PAR_START_BREED: '0',
        PAR_END_BREED: '99',
        PAR_REPORT_TYPE: 'PARITY_W',
        PAR_BACK_PERIOD_WEEKS: '10',
        PAR_Max_PARITY: '7',
        farmName: this.orgCode + '#' + this.farmOrg,
        loadFlag: false,
        tableFlag: false,
        datas: [],
        tag: {},
        up: false,
        tableTh: {},
        htmlTitle: this.$t('message.titleSwineReport07')
      }
    },
    mounted () {
      this.headerMonitor()
    },
    methods: {
      getExcel () {
        var excelTitle = '<h1 style="text-align: center">' + '</h1>'
        excelTitle += '<h2 style="text-align: center">' + this.htmlTitle + '</h2>'
        excelTitle += '<div style="font-weight: bold"><span>' + this.$t('swineReport.queryDate') + ':' + this.tableTh.date_column_acm01_min_date + this.$t('swineReport.to') + this.tableTh.date_column_acm01_max_date + '</span></div>'
        this.tableToExcel2(excelTitle, 'sTable')
      },
      down () {
        this.up = !this.up
      },
      getVariety (item) {
        var _self = this
        if (item === 'TOTAL') {
          _self.PAR_ALL_BREED = 'ALL'
          _self.PAR_END_BREED = 99
        } else {
          _self.PAR_ALL_BREED = 'NOT_ALL'
          _self.PAR_END_BREED = item
        }
      },
      doSearch () {
        var _self = this
        _self.datas = ''
        _self.tableFlag = false
        _self.loadFlag = true
        jQuery.ajax({
          url: '/standard/' + _self.orgCode + '/' + _self.farmOrg + '/report7',
          type: 'POST',
          // contentType: 'application/json',
          data: {'PAR_DATE': _self.PAR_DATE, 'PAR_ALL_BREED': _self.PAR_ALL_BREED, 'PAR_START_BREED': _self.PAR_START_BREED, 'PAR_END_BREED': _self.PAR_END_BREED, 'PAR_BACK_PERIOD_WEEKS': _self.PAR_BACK_PERIOD_WEEKS, 'pAR_REPORT_TYPE': _self.PAR_REPORT_TYPE, 'PAR_Max_PARITY': _self.PAR_Max_PARITY},
          dataType: 'json',
          success: function (res) {
            _self.datas = res
            if (res.length > 0) {
              _self.tableTh = res[0]
            }
            _self.loadFlag = false
            _self.tableFlag = true
            _self.$nextTick(function () {
              _self.tag.hHeight = jQuery('#sTable').offset().top
            })
          },
          fail: function (e) {
            alert('请求失败')
            console.log('查询失败')
          }
        })
      },
      headerMonitor () {
        var self = this
//        var hHeight = jQuery('#sTable').offset().top
        jQuery(document).scroll(function () {
          // 当滚动条达到偏移值的时候，出现固定表头
          if (jQuery(this).scrollTop() >= self.tag.hHeight - 44) {
//            console.log('++++' + jQuery(this).scrollTop())
//            console.log('----' + self.tag.hHeight)
            self.fixedHeader = true
          } else {
            self.fixedHeader = false
          }
        })
      }
    }
  }
</script>

